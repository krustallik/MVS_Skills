@model MVC.Areas.Auth.Models.Forms.ProfileForm
@{
    ViewData["Title"] = "Edit Profile";
}
<div>
    <h1 class="display-4">@ViewData["Title"]</h1>

    <div class="row">
        <div class="col-md-6">
            <form method="post" enctype="multipart/form-data" asp-area="Auth" asp-controller="Profile" asp-action="Edit">
                <div class="card">
                    <div class="card-header">Edit Profile Information</div>
                    <div class="card-body">
                        <div class="mb-3">
                            @Html.LabelFor(x => x.FullName, new { @class = "form-label" })
                            @Html.TextBoxFor(x => x.FullName, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.FullName, null, new { @class = "text-danger" })
                        </div>
                        <div class="mb-3">
                            @Html.LabelFor(x => x.Phone, new { @class = "form-label" })
                            @Html.TextBoxFor(x => x.Phone, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.Phone, null, new { @class = "text-danger" })
                        </div>
                        <div class="mb-3">
                            @Html.LabelFor(x => x.Image, new { @class = "form-label" })
                            <input type="file" name="Image" class="form-control" accept=".jpg,.jpeg,.png,.gif" />
                        </div>
                        @if (!string.IsNullOrEmpty(Model.ImagePath))
                        {
                            <div class="mb-3">
                                <img src="@Model.ImagePath" alt="Current Avatar" style="max-width: 150px;" />
                            </div>
                        }
                    </div>
                    <div class="card-footer">
                        <button type="submit" class="btn btn-primary">Save</button>
                        <a asp-area="Auth" asp-controller="Profile" asp-action="Index" class="btn btn-outline-success">Return</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
